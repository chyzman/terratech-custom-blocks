    "ModuleWeapon": {
      "m_RotateSpeed" : 15 //Speed at which a weapon can aim at something
    },
    "GameObject|_gimbalBase": {        //When a property name starts with GameObject|, it means it is a subobject. Which holds more subobjects, or components
